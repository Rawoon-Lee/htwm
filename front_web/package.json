{
  "name": "front_web",
  "version": "1.0.0",
  "main": "public/main.js",
  "license": "MIT",
  "scripts": {
    "start:react": "webpack serve --progress --mode development",
    "start": "concurrently \"yarn start:react\" \"wait-on http://localhost:8080 && electron .\"",
    "build:webpack": "webpack",
    "build": "yarn build:webpack && electron-builder"
  },
  "build": {
    "productName": "HomeTMi",
    "appId": "com.HomeTMi.electron",
    "asar": true,
    "files": [
      "dist/**/*",
      "public/main.js"
    ],
    "linux": {
      "target": [
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {},
    "directories": {
      "output": "./build/"
    }
  },
  "dependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "dotenv": "^16.0.3",
    "electron-is-dev": "^2.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.25.0",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "style-loader": "^3.3.1",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
